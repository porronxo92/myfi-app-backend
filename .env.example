# ============================================
# SECURITY & JWT
# ============================================
# IMPORTANTE: Genera claves secretas únicas con:
# python -c "import secrets; print(secrets.token_urlsafe(48))"

JWT_SECRET_KEY=REEMPLAZAR_CON_CLAVE_SECRETA_UNICA
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh Tokens (para mantener sesión activa sin re-login)
REFRESH_TOKEN_SECRET_KEY=REEMPLAZAR_CON_OTRA_CLAVE_SECRETA_UNICA
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://usuario:password@localhost:5432/nombre_base_datos

# ============================================
# LLM CONFIGURATION
# ============================================
# Obtén tu API Key en: https://ai.google.dev/
GEMINI_API_KEY=REEMPLAZAR_CON_TU_GEMINI_API_KEY
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOGS_DIR=../logsBackend
LOG_ROTATION_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,xlsx,csv,txt

# ============================================
# CORS (orígenes permitidos, separados por comas)
# ============================================
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ============================================
# RATE LIMITING
# ============================================
# Rate limit general (todas las peticiones)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Rate limit específico para login (protección brute force)
LOGIN_RATE_LIMIT_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=15

# ============================================
# ALPHA VANTAGE API (Stock Market Data)
# ============================================
# Obtén tu API key gratuita en: https://www.alphavantage.co/support/#api-key
# Límites del plan gratuito: 5 requests/minuto, 500 requests/día
# Tarda menos de 20 segundos en obtenerla
ALPHA_VANTAGE_API_KEY=REEMPLAZAR_CON_TU_ALPHA_VANTAGE_API_KEY
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# ============================================
# FINNHUB API (Stock Market Data - Priority)
# ============================================
# Obtén tu API key gratuita en: https://finnhub.io/register
# Límites del plan gratuito: 60 requests/minuto
FINNHUB_API_KEY=REEMPLAZAR_CON_TU_FINNHUB_API_KEY

# ============================================
# BRANDFETCH API (Stock Logos)
# ============================================
# Obtén tu client ID en: https://brandfetch.com/
# Esta API proporciona los logos de las empresas/stocks
BRANDFETCH_CLIENT_ID=REEMPLAZAR_CON_TU_BRANDFETCH_CLIENT_ID
